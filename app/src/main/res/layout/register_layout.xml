<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/vv"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/register_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/bnn"
        />

    <EditText
        android:id="@+id/firstname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColorHint="#F3F1F1"
        android:textColor="#ECE4E4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_image"
        android:background="@drawable/design_input"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_action_name"
        android:textAlignment="textStart"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstname_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColorHint="#F3F1F1"
        android:textColor="#ECE4E4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/design_input"
        android:hint="Email"
        android:drawableLeft="@drawable/icon_email"
        android:textAlignment="textStart"
        android:textSize="19sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColorHint="#F3F1F1"
        android:textColor="#ECE4E4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/design_input"
        android:hint="Phone"
        android:drawableLeft="@drawable/icon_phone"
        android:textAlignment="textStart"
        android:textSize="19sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColorHint="#F3F1F1"
        android:textColor="#ECE4E4"
        android:layout_centerHorizontal="true"
        android:background="@drawable/design_input"
        android:hint="Password"
        android:drawableLeft="@drawable/icon_password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textSize="19sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/signupbtn_id"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_input"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/circle_button"
        android:clickable="true"
        android:text="SignUp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold">
    </Button>


</RelativeLayout>