<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/login_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/abc"
        />

    <EditText
        android:id="@+id/login_userphone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/login_image"
        android:background="@drawable/design_input"
        android:hint="Phone Number"
        android:textColorHint="#F3F1F1"
        android:textColor="#ECE4E4"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_action_name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:layout_below="@id/login_userphone_input"
        android:background="@drawable/design_input"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:textColorHint="#F3F1F1"
        android:textColor="#ECE4E4"
        android:inputType="textPassword"
        android:padding="20dp"
        android:textAlignment="viewStart"
        android:textSize="19sp"
        android:drawableLeft="@drawable/icon_password"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_password_input"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/circle_button"
        android:clickable="true"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold">
    </Button>

    <TextView
        android:id="@+id/usrRegtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Register Me"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="30dp"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:clickable="true"
        />


</RelativeLayout>